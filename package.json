{
  "name": "bibsclaw",
  "version": "1.0.0",
  "description": "BibsClaw - Personal AI assistant with voice interface, autonomous coding agent, and dev tools.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "prebuild": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "tsc",
    "postbuild": "node -e \"require('fs').cpSync('src/web/public','dist/web/public',{recursive:true})\"",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": ["ai", "assistant", "voice", "agent", "coding", "automation"],
  "author": "Bibin",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "elevenlabs": "^1.3.0",
    "express": "^4.21.2",
    "glob": "^11.0.1",
    "openai": "^4.82.0",
    "simple-git": "^3.27.0",
    "socket.io": "^4.8.1",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/ws": "^8.5.14",
    "eslint": "^9.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
