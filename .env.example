# ============================================
# BibsClaw Configuration
# Copy this file to .env and fill in your values
# ============================================

# --- AI Provider (Claude) ---
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# --- Speech-to-Text (OpenAI Whisper API) ---
OPENAI_API_KEY=sk-your-openai-key-here
STT_MODEL=whisper-1
STT_LANGUAGE=en

# --- Text-to-Speech (ElevenLabs) ---
ELEVENLABS_API_KEY=your-elevenlabs-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_monolingual_v1

# --- Web Dashboard ---
PORT=3200
DASHBOARD_ENABLED=true

# --- Git / Project Settings ---
PROJECT_DIR=/path/to/your/project
GIT_AUTO_BRANCH=true
GIT_BRANCH_PREFIX=bibsclaw/
ALLOWED_COMMANDS=npm test,npm run lint,npm run build,git status,git diff,git log

# --- Guardrails ---
MAX_FILE_SIZE_KB=500
BLOCKED_PATHS=.env,.env.local,node_modules,dist,.git
AUTO_MERGE=false
REQUIRE_TESTS_PASS=true

# --- Logging ---
LOG_LEVEL=info
LOG_FILE=bibsclaw.log
