# ==========================================
# BibsClaw Configuration
# Copy this file to .env and fill in your values
# ==========================================

# --- Perplexity API (PRIMARY - Recommended) ---
# Get your key at https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here
PERPLEXITY_MODEL=sonar

# --- AI Provider (Anthropic - OPTIONAL fallback) ---
# Only needed if you don't have a Perplexity key
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# --- Telegram Bot ---
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
# Comma-separated Telegram usernames allowed to use the bot (empty = allow all)
TELEGRAM_ALLOWED_USERS=

# --- Speech-to-Text (OpenAI Whisper API) ---
OPENAI_API_KEY=sk-your-openai-key-here
STT_MODEL=whisper-1
STT_LANGUAGE=en

# --- Text-to-Speech (ElevenLabs) ---
ELEVENLABS_API_KEY=your-elevenlabs-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_monolingual_v1

# --- Web Dashboard ---
PORT=3200
DASHBOARD_ENABLED=true

# --- Git / Project Settings ---
# Leave PROJECT_DIR empty or set to . to use current directory
# PROJECT_DIR=.
GIT_AUTO_BRANCH=true
GIT_BRANCH_PREFIX=bibsclaw/
ALLOWED_COMMANDS=npm test,npm run lint,npm run build,git status,git diff,git log

# --- Guardrails ---
MAX_FILE_SIZE_KB=500
BLOCKED_PATHS=.env,.env.local,node_modules,dist,.git
AUTO_MERGE=false
REQUIRE_TESTS_PASS=true

# --- Logging ---
LOG_LEVEL=info
LOG_FILE=bibsclaw.log
